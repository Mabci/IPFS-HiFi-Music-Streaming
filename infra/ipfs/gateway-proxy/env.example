# Configuraci√≥n del Private Gateway Proxy Environment Variables

# Server Configuration
PORT=3001
NODE_ENV=production

# IPFS Configuration
IPFS_API_URL=http://ipfs-node:5001
IPFS_GATEWAY_URL=http://ipfs-node:8080

# Cache Configuration
REDIS_URL=redis://redis:6379
CACHE_TTL=3600
MAX_CACHE_SIZE=1GB

# Database Configuration
# Gateway metrics database
DATABASE_URL=postgresql://postgres:password@postgres:5432/music_gateway

# Main application database (for CID validation)
# Replace with your actual backend database URL
MAIN_DATABASE_URL=postgresql://user:password@your-backend-host:5432/your_main_db

# Logging
LOG_LEVEL=info
