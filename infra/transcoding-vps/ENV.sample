# Configuración del Worker de Transcodificación VPS

# Redis Configuration (debe coincidir con el servidor principal)
REDIS_HOST=your-redis-server.com
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Database Configuration (misma que el servidor principal)
DATABASE_URL="postgresql://postgres:PASSWORD@HOST:5432/postgres?sslmode=require"

# Worker Configuration
WORKER_CONCURRENCY=2
TEMP_WORK_DIR=/tmp/audio-processing
WORKER_API_KEY=your-secure-worker-api-key

# Backend API Configuration
BACKEND_API_URL=https://your-backend-api.com
BACKEND_API_KEY=your-backend-api-key

# IPFS Configuration
IPFS_API_URL=http://127.0.0.1:5001
IPFS_GATEWAY_URL=https://your-private-gateway.com

# Logging
LOG_LEVEL=info
LOG_FILE=/var/log/transcoding-worker.log

# System Configuration
NODE_ENV=production
